<!DOCTYPE html>
<html>
  <head>
    <title>Organ-Izer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="header">
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"><i class="fa fa-bars" aria-hidden="true"></i></button>
        <ul class="dropdown-menu">
          <li><%= link_to "Show All Music", musics_path %></li>
          <li><%= link_to "Save", musics_path(:format => 'csv') %></li>
          <% if logged_in? %>
          <li><%= link_to "LogOut", logout_path, method: :delete %></li>
          <% else %>
          <li><%= link_to "LogIn", login_path %></li>
          <% end %>
        </ul>
      </div>
      <h1 id="main-title">Organ-Izer</h1>
    </div>
    <% if(flash[:error]) %>
    <%= flash[:error] %>
    <% elsif(flash[:notice]) %>
    <%= flash[:notice] %>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
